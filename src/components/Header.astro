---
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const links = [
	{
		href: `/${lang}/`,
		text: 'Portfolio',
	},
	{
		href: `/${lang}/blog/`,
		text: 'Blog',
	},
];
---

<header>
	<nav
		class='fixed w-full flex justify-center gap-8 h-16 items-center bg-white dark:bg-gray-950 border-b z-10'>
		{
			links.map(({ href, text }) => (
				<a
					href={href}
					class={[
						'text-gray-900 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-300',
						href === Astro.url.pathname ? 'font-bold underline' : '',
					].join(' ')}>
					{text}
				</a>
			))
		}
	</nav>
	<div class='pt-16'></div>
</header>
